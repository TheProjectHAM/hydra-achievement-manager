{
  "name": "ProjectHAM",
  "private": true,
  "version": "2.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "vite build && electron .",
    "electron:dev": "vite build && electron .",
    "build:win": "vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "jimp": "^1.6.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.project.ham",
    "productName": "Project HAM",
    "files": [
      "dist/**",
      "dist-electron/**",
      "electron/**",
      "node_modules/**",
      "package.json",
      "LICENSE"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  }
}
