{
  "name": "project-ham",
  "version": "2.0.0",
  "description": "A modern Project HAM achievements manager",
  "main": "main.js",
  "author": {
    "name": "Esther and Levelyn",
    "email": "esther24072006@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "prod": "cross-env NODE_ENV=production electron .",
    "rebuild": "electron-rebuild",
    "prebuild": "yarn rebuild",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --linux",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:linux-all": "electron-builder --linux deb rpm tar.xz AppImage",
    "build:deb": "electron-builder --linux deb",
    "build:rpm": "electron-builder --linux rpm",
    "build:arch": "electron-builder --linux tar.xz",
    "build:appimage": "electron-builder --linux AppImage",
    "postinstall": "electron-builder install-app-deps"
  },
  "license": "GPL-3.0-only",
  "dependencies": {
    "axios": "^1.8.4",
    "electron-store": "^8.2.0",
    "sharp": "^0.34.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.project.ham.manager",
    "productName": "Project HAM",
    "copyright": "Copyright Â© 2025 Esther and Levelyn",
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/{.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.DS_Store,.idea,.vs,.vscode,docs,.github,.gradle,.settings}/**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*",
      "!build.sh",
      "!BUILD_GUIDE.md"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Project HAM",
      "license": "LICENSE",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.xz",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "synopsis": "A modern Project HAM achievements manager for Hydra games",
      "description": "Project HAM is a modern tool for managing Hydra achievements in games. It provides an intuitive interface for unlocking achievements and managing game progress.",
      "maintainer": "Esther and Levelyn <contact@projectham.dev>",
      "vendor": "Project HAM Team",
      "desktop": {
        "Name": "Project HAM",
        "Comment": "Manage Hydra achievements for games",
        "Keywords": "hydra;achievements;games;ham;manager;",
        "StartupWMClass": "project-ham"
      },
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "deb": {
      "packageCategory": "games",
      "priority": "optional",
      "maintainer": "Esther and Levelyn <contact@projectham.dev>",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "rpm": {
      "packageCategory": "Amusements/Games",
      "vendor": "Project HAM Team",
      "maintainer": "Esther and Levelyn <contact@projectham.dev>",
      "depends": [
        "libXtst",
        "libXrandr",
        "alsa-lib",
        "libXScrnSaver",
        "GConf2"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Levynsk",
      "repo": "hydra-achievement-manager"
    }
  }
}
